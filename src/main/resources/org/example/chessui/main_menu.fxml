<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.chessui.Controllers.MainMenuController"
           style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">

    <VBox alignment="CENTER" spacing="30" fillWidth="false" maxWidth="500"
          style="-fx-padding: 40">

        <!-- Welcome -->
        <Label fx:id="welcomeLabel"
               text="Welcome, ali"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-text-fill: white; -fx-font-size:18px; -fx-font-weight: bold;" />

        <!-- Game Mode Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="aiBtn" text="Play vs AI" prefWidth="400"
                    style="-fx-background-color:#2980b9;
                           -fx-text-fill:white;
                           -fx-font-weight:bold;
                           -fx-background-radius:5;
                           -fx-padding:8 20;" />
            <Button fx:id="pvpBtn" text="Two Players" prefWidth="400"
                    style="-fx-background-color:#2980b9;
                           -fx-text-fill:white;
                           -fx-font-weight:bold;
                           -fx-background-radius:5;
                           -fx-padding:8 20;" />
            <Button fx:id="historyBtn" text="Game History"
                    prefWidth="400"
                    style="-fx-background-color:#2980b9;
                           -fx-text-fill:white;
                           -fx-font-weight:bold;
                           -fx-background-radius:5;
                           -fx-padding:8 20;" />
        </HBox>

        <!-- Logout -->
        <Button fx:id="logoutBtn"
                text="Logout"
                prefWidth="150"
                style="-fx-background-color:#c0392b;
                       -fx-text-fill:white;
                       -fx-font-weight:bold;
                       -fx-background-radius:5;
                       -fx-padding:8 0;" />
    </VBox>
</StackPane>
