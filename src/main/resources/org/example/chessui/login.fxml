<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.chessui.Controllers.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">
    <!-- Username Field -->
    <TextField fx:id="usernameField"
               promptText="Username"
               layoutX="100" layoutY="80"
               style="-fx-background-radius:5; -fx-background-color:rgba(255,255,255,0.8); -fx-padding:8 12; -fx-font-size:14px;"/>

    <!-- Password Field -->
    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   layoutX="100" layoutY="120"
                   style="-fx-background-radius:5; -fx-background-color:rgba(255,255,255,0.8); -fx-padding:8 12; -fx-font-size:14px;"/>

    <!-- Login Button -->
    <Button fx:id="loginBtn"
            text="Log In"
            layoutX="160" layoutY="160"
            style="-fx-background-color:#2980b9; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:5; -fx-padding:8 20;"/>

    <!-- Register Link -->
    <Hyperlink fx:id="registerLink"
               text="Register"
               layoutX="160" layoutY="200"
               style="-fx-text-fill:white; -fx-underline:true;"/>

    <!-- Error Label -->
    <Label fx:id="errorLabel"
           layoutX="100" layoutY="240"
           textFill="red"
           style="-fx-text-fill:#e74c3c; -fx-font-size:12px; -fx-font-weight:bold; -fx-opacity:0.9;"/>
</AnchorPane>
