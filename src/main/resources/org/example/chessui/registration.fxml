<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.chessui.Controllers.RegistrationController"
           style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">

    <!--
      A neat 300px-wide form, centered by the StackPane.
      fillWidth="false" stops the oversized stretching.
    -->
    <VBox alignment="CENTER" spacing="15" fillWidth="false" maxWidth="300">
        <TextField fx:id="usernameField"
                   promptText="Username"
                   prefWidth="300"
                   style="-fx-background-radius:5; -fx-background-color:rgba(255,255,255,0.8); -fx-padding:8 12; -fx-font-size:14px;"/>

        <TextField fx:id="emailField"
                   promptText="Email"
                   prefWidth="300"
                   style="-fx-background-radius:5; -fx-background-color:rgba(255,255,255,0.8); -fx-padding:8 12; -fx-font-size:14px;"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       prefWidth="300"
                       style="-fx-background-radius:5; -fx-background-color:rgba(255,255,255,0.8); -fx-padding:8 12; -fx-font-size:14px;"/>

        <Button fx:id="registerBtn"
                text="Register"
                prefWidth="150"
                style="-fx-background-color:#2980b9; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:5; -fx-padding:8 20;"/>

        <Hyperlink fx:id="loginLink"
                   text="Back to Login"
                   style="-fx-text-fill:white; -fx-underline:true;"/>

        <Label fx:id="errorLabel"
               textFill="#e74c3c"
               style="-fx-font-size:12px; -fx-font-weight:bold; -fx-opacity:0.9;"/>
    </VBox>
</StackPane>
